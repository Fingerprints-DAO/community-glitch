{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": [
      "es5", "es6", "ESNext", "dom", "dom.iterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitThis":true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2020",
    "rootDir": "src"
  },
  "exclude": ["test", "dist"],
  "include": ["src/**/*.ts", "src/**/*.json"]
}
